    <groupId>com.bootcamp</groupId>
    <artifactId>monorepo-spring</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>

    <modules>
        <module>bacen-service</module>
        <module>conta-service</module>
    </modules>

    <properties>
